        <servlet-class>AddBookServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddBook</servlet-name>
        <url-pattern>/AddBook</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>RemoveBook</servlet-name>
        <servlet-class>RemoveBookServlet</servlet-class>
    </servlet>
