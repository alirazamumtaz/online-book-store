        <servlet-name>RemoveBook</servlet-name>
        <url-pattern>/RemoveBook</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>searchBook</servlet-name>
        <servlet-class>searchBookServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>searchBook</servlet-name>
        <url-pattern>/searchBook</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>addtoCart</servlet-name>
        <servlet-class>AddToCartServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addtoCart</servlet-name>
        <url-pattern>/addtoCart</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>removeFromCart</servlet-name>
        <servlet-class>RemoveFromCart</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>removeFromCart</servlet-name>
        <url-pattern>/removeFromCart</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>cartPage</servlet-name>
        <servlet-class>cartPage</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>cartPage</servlet-name>
        <url-pattern>/cartPage</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>Logout</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>finalOrder</servlet-name>
        <servlet-class>finalOrder</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>finalOrder</servlet-name>
        <url-pattern>/finalOrder</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>editBookServlet</servlet-name>
        <servlet-class>editBookServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>editBookServlet</servlet-name>
        <url-pattern>/editBook</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>blockUserServlet</servlet-name>
        <servlet-class>blockUserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>blockUserServlet</servlet-name>
        <url-pattern>/blockUser</url-pattern>
    </servlet-mapping>

</web-app>